<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ShowUser"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_gravity="left|center"
            android:layout_marginLeft="15sp"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdc5"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="20dp"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/followers_cardview"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/followerNo_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginBottom="10dp"

                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/followersss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="Followers"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/posts_cardview"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:id="@+id/postsNo_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/post2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="Posts"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/name_tv_showprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="25dp"
                        android:hint=""
                        android:padding="4dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:ignore="RtlCompat" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_requestshowprofile"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/buttonpimk"
                            android:padding="3dp"
                            android:text="Follow"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_sendmessage_f1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/lgrey"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/btn_sendmessage_showuser"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:background="@android:color/transparent"
                                android:elevation="20dp"
                                android:src="@drawable/messageicon" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@color/lgrey"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:background="@android:color/transparent"
                                android:elevation="20dp"
                                android:src="@drawable/morever" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/imageView_showprofile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_person" />
                </androidx.cardview.widget.CardView>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/lgrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="310dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/bio_tv_showprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bio"
                        android:maxLines="15"
                        android:paddingLeft="10dp"
                        android:text="Bio"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/prof_pv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/work"
                        android:drawablePadding="10dp"
                        android:hint="Profession"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/website_tv_showprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_baseline_link_24"
                        android:drawablePadding="10dp"
                        android:hint="Link"
                        android:inputType="textWebEditText"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/atstuddy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/colleges"
                        android:drawablePadding="10sp"
                        android:hint="Studied at"
                        android:inputType="textWebEditText"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/atcurrentcity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/plces"
                        android:drawablePadding="10dp"
                        android:hint="Current City"
                        android:inputType="textWebEditText"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/atfrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/places"
                        android:drawablePadding="10dp"
                        android:hint="From"
                        android:inputType="textWebEditText"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/athobby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/hobby"
                        android:drawablePadding="10dp"
                        android:hint="Hobby"
                        android:inputType="textWebEditText"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/lgrey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pinRed"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:id="@+id/tv_requestshowprofile"
                        android:text="Account is Private Request for watching profile"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/galpost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/lgrey"
                            android:elevation="20dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:background="@android:color/transparent"
                                android:elevation="20dp"
                                android:src="@drawable/galleryicon" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/pisted"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="20dp"
                            android:clickable="true"
                            android:text="Posts"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>