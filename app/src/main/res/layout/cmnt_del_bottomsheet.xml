<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="3dp"
    android:background="@drawable/bottom_back"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_capslock_24"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delete comment"
            android:visibility="gone"
            android:id="@+id/deletes"
            android:textSize="20sp"
            android:textColor="@color/pinRed"
            android:drawableStart="@drawable/ic_baseline_delete_24"
            android:drawablePadding="10dp"
            android:padding="10dp"/>




</LinearLayout>