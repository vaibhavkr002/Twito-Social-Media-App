<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_back"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_capslock_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:id="@+id/del_profile"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cardviewcorners"
            android:elevation="30dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="35dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:elevation="20dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/deleteicon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
android:textSize="12dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:id="@+id/settings_profile"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cardviewcorners"
            android:elevation="30dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="35dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:elevation="20dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_marginRight="15dp"
                android:textSize="12dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:id="@+id/logout_profile"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cardviewcorners"
            android:elevation="30dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="35dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:elevation="20dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/logouticon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginRight="15dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>