<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/lgrey"
    android:elevation="30dp"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="60dp"
            android:layout_height="58dp"
            app:cardElevation="20dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center_vertical"
            app:cardPreventCornerOverlap="false"
            android:elevation="8dp">


            <ImageView
                android:id="@+id/imageView_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_request_name_item"
                android:textColor="@color/black"
                android:paddingStart="17dp"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:id="@+id/accept_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                  android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_outline"
                    android:padding="5dp"
                    android:text="Accept"

                    android:textColor="@color/start"
                    android:textSize="15sp" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:id="@+id/decline_request"
                    android:layout_marginLeft="10dp"
                android:textSize="15sp"
                    android:gravity="right"
                android:textColor="@color/white"
                android:padding="5dp"
                android:background="@drawable/border_deco"/>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>